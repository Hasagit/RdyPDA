<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--滑动-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--包裹内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--物料编号-->
            <android.support.v7.widget.RecyclerView
                android:background="@color/color_white"
                android:id="@+id/rv_recycler_fragment_hl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <!--生产批次-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_left_top"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="@dimen/normal_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="生产批次" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/table_right_top"
                    android:orientation="horizontal">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_scpc_fragment_hl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></EditText>
                </LinearLayout>
            </LinearLayout>

            <!--包装数量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_left_top"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="@dimen/normal_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="包装数量" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/table_right_top"
                    android:orientation="horizontal">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_bzsl_fragment_hl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></EditText>
                </LinearLayout>
            </LinearLayout>

            <!--原料库位-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_left_top"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="@dimen/normal_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="原料库位" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/table_right_top"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp_ylkw_fragment_hl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Spinner>
                </LinearLayout>
            </LinearLayout>

            <!--条码编号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/table_left_top"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="@dimen/normal_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="条码编号" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/table_right_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tmbh_fragmeng_hl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_getbarcode_fragment_hl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_kcpd_blue"
                android:text="获取条码编号"
                android:textColor="@color/color_white"
                android:textSize="@dimen/normal_textSize" />

            <Button
                android:id="@+id/btn_print_fragment_hl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/color_kcpd_blue"
                android:text="打印"
                android:textColor="@color/color_white"
                android:textSize="@dimen/normal_textSize" />

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_fragment_hl2"
        android:src="@drawable/pddy_item_add"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="150dp"
        android:layout_gravity="right|bottom"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</FrameLayout>
